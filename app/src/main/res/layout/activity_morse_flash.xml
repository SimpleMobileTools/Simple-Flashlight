<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MorseFlashActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- text instruction -->
        <TextView
            android:id="@+id/textView_MorseFlash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="25dp"
            android:text="Enter Text :" />

        <!-- User Input -->
        <EditText
            android:id="@+id/editText_UserInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="Enter Message"
            android:inputType="text"/>

        <!-- Result of the Morse Translation in text -->
        <TextView
            android:id="@+id/textView_translation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=" " />

        <!-- Launch Morse Flash Translation-->
        <Button
            android:id="@+id/btn_morseFlash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Flash" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
